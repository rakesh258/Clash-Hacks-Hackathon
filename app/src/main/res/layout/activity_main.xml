<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.dipakkr.github.clashhackproject.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who you are ?"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Employee"
        android:background="@drawable/bt_background"
        android:id="@+id/bt_employee"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/bt_employer"
        android:layout_alignStart="@+id/bt_employer" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Employer"
        android:background="@drawable/bt_background"
        android:id="@+id/bt_employer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="156dp" />

</RelativeLayout>
